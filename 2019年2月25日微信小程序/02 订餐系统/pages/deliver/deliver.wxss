page {
  background-color: #EFEFEF;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 14px;
}
#addressPart {
  margin: 30rpx 0;
  padding: 30rpx;
  background-color: white;
}
#addressPart .choose {
  margin-bottom: 40rpx;
}
#addressPart .choose view text {
  padding-right: 20rpx;
  padding-left: 20rpx;
  border: 1px solid #ccc;
  text-align: center;
  margin-right: 20rpx;
}
#addressPart .choose view text:first-child {
  border: none;
  padding-left: 0;
  font-size: 16px;
  margin-right: 0;
}
#addressPart .getPhoneNumber .button {
  text-align: left;
}
#addressPart .getPhoneNumber button {
  width: 187.5rpx;
  display: inline-block;
  font-size: 14px;
}
#showPart {
  background-color: white;
}
#showPart .title {
  padding: 30rpx 0 15rpx 20rpx;
  font-size: 20px;
  border-bottom: 1px solid #ccc;
}
#showPart .list view {
  display: flex;
  height: 120rpx;
  align-items: center;
}
#showPart .list view image {
  flex: 1;
  height: 80%;
}
#showPart .list view .product-title {
  flex: 3;
  padding-left: 30rpx;
}
#showPart .list view .product-num {
  flex: 1;
}
#showPart .list view .product-price {
  flex: 1;
}
#buyPart {
  position: fixed;
  height: 100rpx;
  left: 30rpx;
  right: 30rpx;
  bottom: 30rpx;
 
}
#buyPart button {
   color: white;
  background-color:#E64340; 
}